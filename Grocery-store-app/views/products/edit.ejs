<% include ../partials/header.ejs %>
<div class="container">
    
    <h1 style="text-align: center">Edit details of product <%=prod.name%></h1>
    <div style="width:30%; margin:25px auto;">
        <form action="/products/<%=prod._id%>?_method=PUT" method="POST">
            <div class="form-group">
                    <input class="form-control" type="text" value="<%=prod.name%>" name="product[name]">
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" value="<%=prod.image%>" name="product[image]">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=prod.description%>" name="product[description]">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=prod.price%>" name="product[price]">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=prod.qty%>" name="product[qty]">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=prod.threshold%>" name="product[threshold]">        
            </div>
            <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block" type="submit">Submit!</button>
            </div>  
                
        </form>
        <a class="btn btn-primary btn-md" href="/products">Go back</a>

    </div>
</div>
<% include ../partials/footer.ejs %>