<% include ../partials/header.ejs %>
<div class="container">
    
    <h1 style="text-align: center">Add a new product</h1>
    <div style="width:30%; margin:25px auto;">
        <form action="/products" method="POST">
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="image">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Description" name="description">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Price" name="price">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Quantity" name="qty">        
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Threshold" name="threshold">        
            </div>
            <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block" type="submit">Submit!</button>
            </div>  
                
        </form>
        <a class="btn btn-primary btn-md" href="/products">Go back</a>

    </div>
</div>
<% include ../partials/footer.ejs %>