<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron" >
        <div class="container">
                <h1>Products</h1>
                <p>View our large collection of products enabled to give you the wholesome experience!</p>
                <p>
                        <a class="btn btn-primary btn-lg" href="/products/new">Add a new Product</a>
                </p>  
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;" >
        <% products.forEach(function(cg){ %>
       
                <div class="col-md-3 col-sm-6">
                    
                        <img src="<%=cg.image%>" class="img-thumbnail">
                        <div class="caption"><h4><%=cg.name%></h4></div>
                        <p><a href="/products/<%= cg._id%>" class="btn btn-info">More Info!</a></p>
        
                </div>
       
        <% }); %>
        
    </div>
</div>



<% include ../partials/footer.ejs %>