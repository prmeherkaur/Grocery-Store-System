<% include ../partials/header.ejs %>
<div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    StoreMan
                </p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="img-thumbnail">
                    <img class="img-fluid mx-auto d-block" src="<%=prod.image%>">
                    <div class="caption">
                        <h4 class="float-right">Rs.<%=prod.price%></h4>
                        <h4><a><%=prod.name%></a></h4>
                        <p><%=prod.description%></p>
                        <h6 class="float-left">Quantity Available:<%=prod.qty%></h6>
                        <h6 class="float-right">Threshold:<%=prod.threshold%></h6>
                        
                        <div id="buttons" class="container">
                        <a class="btn btn-outline-success btn-md" style="margin:5px" href="/products/<%=prod._id%>/edit">Edit</a>
                        <form  action="/products/<%=prod._id%>?_method=DELETE" method="POST">
                            <button style="margin:5px" class="btn btn-outline-danger btn-md">Delete</button>
                        </form>
                        </div>
                        
                    </div>
                </div>
                <br>
                <p><em>Submitted by:<%=prod.author.username%></em></p>
            </div>
        </div>
</div>



<% include ../partials/footer.ejs %>